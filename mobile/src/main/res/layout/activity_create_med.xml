<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.danarias.lifewatch2.createMedActivity">

    <ImageView
        android:layout_width="71dp"
        android:layout_height="74dp"
        android:id="@+id/medImageView"
        android:src="@drawable/pills_bottle_icon"
        />

    <TextView
        android:id="@+id/medTextView"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:fontFamily="sans-serif-thin"
        android:text="New Medication"
        android:textColor="@color/boston_university_red"
        android:textSize="40sp"
        android:autoText="false"
        android:elegantTextHeight="@bool/abc_action_bar_embed_tabs_pre_jb"
        android:layout_alignBottom="@+id/medImageView"
        android:layout_toRightOf="@+id/medImageView"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/medImageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"


        android:layout_marginTop="30dp"
        android:id="@+id/linearLayout">


        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:textSize="25sp"
            android:fontFamily="sans-serif-thin"
            android:ems="10"
            android:id="@+id/mednameEditText"
            android:hint="Medication Name" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginTop="30dp"
            android:id="@+id/medquantityEditText"
            android:fontFamily="sans-serif-thin"
            android:textSize="25sp"
            android:hint="Quantity"
            android:inputType="text" />



    </LinearLayout>



    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:id="@+id/intervaltimeTable">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/tablerow1"
            android:layout_marginBottom="20dp"
            android:baselineAligned="false"
            android:gravity="center">
        <EditText
            android:fontFamily="sans-serif-thin"
            android:background="#bfd0ffed"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:inputType="textMultiLine"

            android:gravity="center"

            android:id="@+id/medNotesEditText"
            android:layout_below="@+id/intervaltimeTable"


            android:hint="Notes"
            android:textSize="20sp"/>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/tablerow2"

            android:baselineAligned="false"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Reminder Interval "
                android:fontFamily="sans-serif-thin"

                android:id="@+id/rem_intervalTextView"
                android:textColor="@android:color/black"
                android:textSize="25sp"
                android:gravity="center"
                />



         </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/tablerow3"

            android:baselineAligned="true"
            android:gravity="center">



            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"

                android:id="@+id/weekEditText"

                android:hint="Weeks"
                 />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"

                android:id="@+id/dayEditText"

                android:hint="Days" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:id="@+id/hourEditText"

                android:hint="Hours"

                 />
        </TableRow>


    </TableLayout>





    <Button
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="Save Medication"
        android:gravity="center"
        android:id="@+id/saveMedButton"
        android:textColor="@color/alice_blue"
        android:textSize="25sp"
        android:fontFamily="sans-serif-thin"
        android:background="@color/boston_university_red"

        android:layout_below="@+id/intervaltimeTable"
        android:layout_centerHorizontal="true"


        />
    <Button
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="Back"
        android:id="@+id/backtoMedButton"

        android:textColor="@color/alice_blue"
        android:background="@color/gray"
        android:textSize="25sp"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-thin"
        android:layout_below="@+id/saveMedButton"
        android:layout_alignLeft="@+id/saveMedButton"
        android:layout_alignStart="@+id/saveMedButton"
        android:layout_marginBottom="10dp"/>




</RelativeLayout>
