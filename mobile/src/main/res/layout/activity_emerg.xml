<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/alice_blue"
    tools:context="com.example.danarias.lifewatch2.EmergActivity">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:gravity="center"
        android:fontFamily="sans-serif-thin"


        android:text="@string/app_name"
        android:textColor="@color/boston_university_red"
        android:textSize="60sp"



        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        android:autoText="false"
        android:elegantTextHeight="@bool/abc_action_bar_embed_tabs_pre_jb"

        />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/countdownTextView"
        android:fontFamily="sans-serif-thin"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="140dp"
        android:textSize="70sp"
        android:textColor="@color/boston_university_red"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contacting Help in ..."
        android:fontFamily="sans-serif-thin"
        android:id="@+id/contactingTextView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:textSize="30sp"
        android:textColor="#f02e2e2e" />

    <Button
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:text="Cancel"
        android:id="@+id/cancEmergButton"
        android:background="@color/gray"
        android:fontFamily="sans-serif-thin"
        android:textSize="25sp"
        android:textColor="@color/alice_blue"
        android:layout_below="@+id/countdownTextView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="60dp"
        android:layout_marginRight="10dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:text="Contact Now"
        android:fontFamily="sans-serif-thin"
        android:textSize="25sp"
        android:id="@+id/contactNowButton"
        android:layout_below="@+id/cancEmergButton"
        android:layout_marginTop="30dp"
        android:background="@color/boston_university_red"
        android:layout_alignRight="@id/cancEmergButton"
        android:layout_alignLeft="@+id/cancEmergButton"
        android:layout_alignStart="@+id/cancEmergButton"
        android:textColor="@color/alice_blue" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cancImageView"
        android:layout_above="@+id/contactNowButton"
        android:layout_toStartOf="@+id/cancEmergButton"
        android:src="@drawable/cancel"
        android:layout_alignTop="@+id/cancEmergButton"
        android:layout_toLeftOf="@+id/cancEmergButton" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/callNowImageView"
        android:layout_alignTop="@+id/contactNowButton"
        android:layout_toLeftOf="@+id/contactNowButton"
        android:layout_toStartOf="@+id/contactNowButton"
        android:src="@drawable/ambulance_icon"
        android:layout_alignBottom="@+id/contactNowButton" />

</RelativeLayout>
