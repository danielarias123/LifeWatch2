<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.danarias.lifewatch2.createContactActivity">

    <ImageView
        android:layout_width="71dp"
        android:layout_height="74dp"
        android:id="@+id/contactsImageView"
        android:src="@drawable/contacts"
        />

    <TextView
        android:id="@+id/contactsTextView"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:fontFamily="sans-serif-thin"
        android:text="New Contact"
        android:textColor="@color/boston_university_red"
        android:textSize="40sp"
        android:autoText="false"
        android:elegantTextHeight="@bool/abc_action_bar_embed_tabs_pre_jb"
        android:layout_alignBottom="@+id/contactsImageView"
        android:layout_toRightOf="@+id/contactsImageView"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contactsImageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"


        android:layout_marginTop="30dp"
        android:id="@+id/linearLayout">


        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:textSize="25sp"
            android:fontFamily="sans-serif-thin"
            android:ems="10"
            android:id="@+id/nameEditText"
            android:hint="Name" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:layout_marginTop="30dp"
            android:id="@+id/phoneEditText"
            android:fontFamily="sans-serif-thin"
            android:textSize="25sp"
            android:hint="Phone Number" />



    </LinearLayout>

    <Button
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="Save Contact"
        android:gravity="center"
        android:id="@+id/saveContactButton"
        android:textColor="@color/alice_blue"
        android:textSize="25sp"
        android:fontFamily="sans-serif-thin"
        android:background="@color/boston_university_red"
        android:layout_marginTop="150dp"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"


        />
    <Button
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="Back"
        android:id="@+id/backtocontactsButton"

        android:textColor="@color/alice_blue"
        android:background="@color/gray"
        android:textSize="25sp"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-thin"
        android:layout_below="@+id/saveContactButton"
        android:layout_alignLeft="@+id/saveContactButton"
        android:layout_alignStart="@+id/saveContactButton"
        android:layout_marginBottom="10dp"/>

</RelativeLayout>
