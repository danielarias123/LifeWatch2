<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.danarias.lifewatch2.MedInfoActivity">

    <ImageView
        android:layout_width="71dp"
        android:layout_height="74dp"
        android:id="@+id/medImageView"
        android:src="@drawable/pills_bottle_icon"
        android:layout_marginTop="0dp"

        />

    <TextView
        android:id="@+id/medInfoTextView"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:fontFamily="sans-serif-thin"
        android:text="MedName"

        android:textSize="40sp"
        android:autoText="false"
        android:elegantTextHeight="@bool/abc_action_bar_embed_tabs_pre_jb"
        android:layout_alignBottom="@+id/medImageView"
        android:layout_alignTop="@+id/medImageView"
        android:layout_toRightOf="@+id/medImageView"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Quantity"
        android:id="@+id/quant1TextView"
        android:layout_below="@+id/medImageView"

        android:layout_alignParentLeft="true"
        android:layout_marginTop="30dp"
        android:textSize="20sp"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Quantity"
        android:id="@+id/quantTextView"
        android:layout_below="@+id/quant1TextView"
        android:fontFamily="sans-serif-thin"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="5dp"
        android:textSize="25sp"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Notes"
        android:id="@+id/mednotes1TextView"
        android:layout_below="@+id/quantTextView"

        android:layout_alignParentLeft="true"
        android:layout_marginTop="0dp"
        android:textSize="20sp"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Notes"
        android:id="@+id/mednotesTextView"
        android:layout_below="@+id/mednotes1TextView"
        android:fontFamily="sans-serif-thin"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="5dp"
        android:textSize="25sp"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Take Every"
        android:id="@+id/interval1TextView"
        android:layout_below="@+id/mednotesTextView"

        android:layout_alignParentLeft="true"
        android:layout_marginTop="0dp"
        android:textSize="20sp"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Interval Num"
        android:id="@+id/intervalnumTextView"
        android:layout_below="@+id/interval1TextView"
        android:fontFamily="sans-serif-thin"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="5dp"
        android:textSize="25sp"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Interval Rate"
        android:id="@+id/intervalrateTextView"
        android:layout_toRightOf="@+id/intervalnumTextView"
        android:layout_alignBottom="@+id/intervalnumTextView"
        android:layout_alignTop="@+id/intervalnumTextView"
        android:fontFamily="sans-serif-thin"

        android:layout_marginLeft="5dp"

        android:textSize="25sp"
         />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/intervalrateTextView"
        android:layout_marginTop="60dp"

        android:stretchColumns="0,1,2"

        android:layout_marginBottom="30dp"
        android:layout_centerHorizontal="true">
        <TableRow
            android:layout_marginTop="0dp"
            android:layout_height="wrap_content">


            <Button
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:text="Back"
                android:layout_alignParentBottom="true"
                android:id="@+id/backtomed2Button"
                android:textColor="@color/alice_blue"
                android:textSize="25sp"
                android:fontFamily="sans-serif-thin"
                android:background="@color/gray"
                android:layout_weight="1"

                />
            <Button
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:fontFamily="sans-serif-thin"
                android:text="Delete"
                android:background="@color/boston_university_red"
                android:id="@+id/deleteMedButton"
                android:layout_weight="1"
                android:textColor="@color/alice_blue"

                android:textSize="25sp"
                android:layout_marginLeft="20dp"

                />

        </TableRow>
    </TableLayout>



</RelativeLayout>
